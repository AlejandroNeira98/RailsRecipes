<h1>Foods#new</h1>
<p>Find me in app/views/foods/new.html.erb</p>

<%= form_with model: @food, url: foods_create_path, method: :post do |form| %>
  <%= form.label :name, "Food's name" %>
  <%= form.text_field :name %>
  <%= form.label :measurement_unit, "Measurement Unit" %>
  <%= form.text_field :measurement_unit %>
  <%= form.label :price, "Food's price" %>
  <%= form.text_field :price %>
  <%= form.label :quantity, "Food's quantity" %>
  <%= form.text_field :quantity %>
  <%= form.submit "Add food"%>
<% end %>